  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
  link(rel='stylesheet' href='/stylesheets/main.css')
  title Register - Budget App
section
  div.container.mt-5
    form.form-group(method='POST' action='/users/create')
      label(for='name') Enter Your Full Name
      input#name.form-control.mb-3(type="text" name='full name' placeholder='enter your full name' required)
      label(for='email') Enter Your Email Address
      input#name.form-control.mb-3(type='email' name='email' placeholder='enter your email address' required)
      label(for='password') Enter Your Password
      input#password.form-control.mb-3(type='password' name='password' placeholder='enter your password' required)
      label(for="password2") Enter Password Again!
      input#password2.form-control.mb-3(type="password" name='password2' placeholder='enter password again' required)
      button.btn.btn-info.text-white Submit